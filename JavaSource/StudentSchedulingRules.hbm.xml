<hibernate-mapping package="org.unitime.timetable.model">
    <class name="StudentSchedulingRule" table="std_sched_rules">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>
        
		<property
			name="ord"
			column="ord"
			type="java.lang.Integer"
			not-null="true"/>

        <property
            name="ruleName"
            column="name"
            type="java.lang.String"
            not-null="true"
            length="255"/>
        
        <property
            name="studentFilter"
            column="student_filter"
            type="java.lang.String"
            not-null="false"
            length="2048"/>

        <property
            name="filterInitiative"
            column="initiative"
            type="java.lang.String"
            not-null="false"
            length="1024"/>

        <property
            name="filterTerm"
            column="term"
            type="java.lang.String"
            not-null="false"
            length="1024"/>

		<property
			name="firstYear"
			column="first_year"
			type="java.lang.Integer"
			not-null="false"
			length="4"/>

		<property
			name="lastYear"
			column="last_year"
			type="java.lang.Integer"
			not-null="false"
			length="4"/>

        <property
            name="instructonalMethod"
            column="instr_method"
            type="java.lang.String"
            not-null="false"
            length="2048"/>

        <property
            name="courseName"
            column="course_name"
            type="java.lang.String"
            not-null="false"
            length="2048"/>

        <property
            name="appliesToFilter"
            column="apply_filter"
            type="java.lang.Boolean"
            not-null="true"/>

        <property
            name="appliesToOnline"
            column="apply_online"
            type="java.lang.Boolean"
            not-null="true"/>

        <property
            name="appliesToBatch"
            column="apply_batch"
            type="java.lang.Boolean"
            not-null="true"/>

        <property
            name="adminOverride"
            column="admin_override"
            type="java.lang.Boolean"
            not-null="true"/>

        <property
            name="advisorOverride"
            column="advisor_override"
            type="java.lang.Boolean"
            not-null="true"/>
    </class>
</hibernate-mapping>